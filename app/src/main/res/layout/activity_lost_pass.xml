<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lost_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    tools:context="co.hega.hegaerp.ui.LostPass">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/footer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Back to login"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:id="@+id/bLogin"
            android:onClick="bckLogin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="43dp"
            android:id="@+id/comp"
            android:hint="Company Name"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:background="#60f7f7f7"
            android:layout_width="250dp"
            android:layout_below="@+id/textView8"
            android:password="false"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3"
            android:layout_alignLeft="@+id/view3"
            android:layout_alignStart="@+id/view3" />

        <view
            android:layout_width="match_parent"
            android:layout_height="50dp"
            class="android.support.v4.widget.Space"
            android:layout_marginTop="30dp"
            android:id="@+id/view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="@string/edt2"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:background="#60f7f7f7"
            android:layout_width="250dp"
            android:password="false"
            android:layout_below="@+id/comp"
            android:layout_alignLeft="@+id/comp"
            android:layout_alignStart="@+id/comp"
            android:layout_alignRight="@+id/comp"
            android:layout_alignEnd="@+id/comp"
            android:layout_marginTop="10dp" />

        <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/button5"
            android:background="#16a085"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="To recover your password write your email address, and we will send you  a recovery code to your email"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_alignBottom="@+id/view3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
