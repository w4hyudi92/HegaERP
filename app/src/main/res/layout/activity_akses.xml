<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_akses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    tools:context="co.hega.hegaerp.ui.Akses">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/footer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="75dp"
            android:id="@+id/view"
            android:background="#ffffff"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView30"
            android:layout_toStartOf="@+id/textView30"
            android:layout_height="1dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="75dp"
            android:id="@+id/view2"
            android:background="#ffffff"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/view"
            android:layout_toRightOf="@+id/textView30"
            android:layout_toEndOf="@+id/textView30"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <Button
            android:text="I'm User"
            android:textSize="18sp"
            android:background="#16a085"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button3"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <TextView
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Register a new account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:onClick="registerText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp" />

        <Button
            android:text="I'm Admin"
            android:textSize="18sp"
            android:background="#16a085"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:id="@+id/button"
            android:textAllCaps="false"
            android:onClick="owner"
            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:layout_below="@+id/textView30"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_alignRight="@+id/view2"
            android:layout_alignEnd="@+id/view2" />

    </RelativeLayout>

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>